{% extends 'base.html.twig' %}

{% block title %}
  Produit
{% endblock %}

{% block body %}
  <div class="container">
    <h1>Produit: {{ produit.nom }}</h1>

    <table class="table table-striped text-white">
      <tbody>
        <tr>
          <th>Id</th>
          <td>{{ produit.id }}</td>
        </tr>
        <tr>
          <th>Nom</th>
          <td>{{ produit.nom }}</td>
        </tr>
        <tr>
          <th>NomEs</th>
          <td>{{ produit.nomEs }}</td>
        </tr>
        <tr>
          <th>Description</th>
          <td>{{ produit.description|nl2br }}</td>
        </tr>
        <tr>
          <th>Pays</th>
          <td>{{ produit.pays }}</td>
        </tr>
        <tr>
          <th>Marque</th>
          <td>{{ produit.marque }}</td>
        </tr>
        <tr>
          <th>Chemin photo</th>
          <td>{{ produit.photo1 }}</td>
        </tr>
        <tr>
          <th>Photo</th>
          <td>
            {% if produit.photo1 %}
              <img src="{{ asset('images/' ~ produit.photo1) }}" alt="{{ produit.nom }}" style="max-width: 200px;" />
            {% else %}
              <p>Pas de photo</p>
            {% endif %}
          </td>
        </tr>
        <tr>
          <th>VisibleWeb</th>
          <td>{{ produit.visibleWeb ? 'Oui' : 'Non' }}</td>
        </tr>
        <tr>
          <th>Utilisateur</th>
          <td>{{ produit.user.email }}</td>
        </tr>
      </tbody>
    </table>
    <div class="pb-3">
      <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
      <a href="{{ path('app_produit_edit', { id: produit.id }) }}" class="btn btn-primary">Modifier</a>
    </div>
  </div>
{% endblock %}
