<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      {% block title %}
        Page de base
      {% endblock %}
    </title>

    {% block stylesheets %}
      <!-- Preload critical resources -->
      <link rel="preload" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" as="style" />
      <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" as="style" />
      <link rel="preload" href="{{ asset('css/styles.css') }}" as="style" />
      <link rel="preload" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" as="style" />

      <!-- Load styles -->
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
      <link rel="stylesheet" href="{{ asset('css/styles.css') }}" />
    {% endblock %}
  </head>

  <body>
    {% block header %}
      {% include 'components/header.html.twig' %}
    {% endblock %}

    <main>
      {% block body %}
      {% endblock %}
    </main>

    {% block footer %}
      {% include 'components/footer.html.twig' %}
    {% endblock %}

    <!-- Preload and load scripts -->
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" as="script" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>

    {% block javascripts %}
      <script>
        // JavaScript code here
      </script>
    {% endblock %}
  </body>
</html>
